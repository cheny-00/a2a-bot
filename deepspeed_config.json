{
    "zero_allow_untested_optimizer": true,
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 3e-5,
            "betas": [0.998, 0.999],
            "eps": 1e-5,
            "weight_decay": 1e-9,
            "cuda_aware": true
        }
    },
    "scheduler": {
        "type": "WarmupLR",
        "params": {
            "last_batch_iteration": -1,
            "warmup_min_lr": 4e-6,
            "warmup_max_lr": 3e-5,
            "warmup_num_steps": 100
        }
    },
    "zero_optimization": {
        "stage": 3,
        
        "contiguous_gradients": true,
        "overlap_comm": true,
        "allgather_bucket_size": 2e8,
        "reduce_bucket_size": 2e8
    }
}